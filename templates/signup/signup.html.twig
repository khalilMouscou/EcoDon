{% extends 'signup/index.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <style>
        /* Center everything */
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        /* Style the form container */
        .form-container {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Style the title */
        .title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        /* Style form inputs */
        .form-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        /* Style the submit button */
        .btn-save {
            background-color: #32CD32;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

        .btn-save:hover {
            background-color: #28a745;
        }

        /* Align the login link */
        .back-text {
            margin-top: 15px;
            font-size: 14px;
            color: #666;
        }

        .signup-link {
            color: #007BFF;
            text-decoration: none;
            font-weight: bold;
        }

        .signup-link:hover {
            text-decoration: underline;
        }
    </style>
<div class="container">
    <div class="form-container">
        <h2 class="title">Create an Account</h2>
        <form action="{{ path('app_signup') }}" method="post">
            <div class="form-group">
                <label for="username">Full Name</label>
                <input type="text" class="form-control" id="username" name="nom" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="tel" placeholder="Optional">
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="adress" placeholder="Optional">
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-save">Sign Up</button>
            </div>
        </form>
        <p class="back-text">Already have an account? <a href="{{ path('app_login') }}" class="signup-link">Login</a></p>
    </div>
</div>

{% endblock %}
